@model List<EmployeeListViewModel>

    <table class="table table-striped">
       <thead>
           <tr>
               <th>Ad</th>
               <th>Soyad</th>
               <th>Ünvan</th>
               <th></th>
               <th></th>
           </tr>
       </thead>
       <tbody>
           @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Title</td>
                <td><a class="btn btn-primary" asp-action="Orders" asp-route-id="@item.EmployeeId">Siparişler</a></td>

                <td><a class="btn btn-success" asp-action="Profile" asp-route-id="@item.EmployeeId">Profilim</a></td>

            </tr>
        }
       </tbody>
    </table>